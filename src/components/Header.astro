---
const currentPage = Astro.url.pathname;
---

<header class="p-4 bg-[rgba(248,246,245,0.9)] sticky top-0 z-50">
  <ul class="flex list-none gap-6 m-0 p-2">
    <li>
      <a 
        href="/" 
        class={` text-lg  hover:underline hover:underline-offset-4 transition ease-in-out duration-200 ${
          currentPage === "/" ? "underline underline-offset-4" : ""
        }`}>
        Home
      </a>
    </li>
    <li>
      <a 
        href="/events" 
        class={`text-lg hover:underline hover:underline-offset-4 transition ease-in-out duration-200 ${
          currentPage === "/events" ? "underline underline-offset-4" : ""
        }`}>
        Events
      </a>
    </li>
    <li>
      <a 
        href="/artisans" 
        class={`text-lg hover:underline hover:underline-offset-4 transition ease-in-out duration-200 ${
          currentPage === "/artisans" ? "underline underline-offset-4" : ""
        }`}>
        Artisans
      </a>
    </li>
    <li>
      <a 
        href="/test" 
        class={`text-lg hover:underline hover:underline-offset-4 transition ease-in-out duration-200 ${
          currentPage === "/test" ? "underline underline-offset-4" : ""
        }`}>
        Test
      </a>
    </li>
  </ul>
</header>
