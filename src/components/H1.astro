---
type Props = {
    text: string;
};
const { text } = Astro.props;
---

<h1><slot /></h1>
<style>
    h1 {
    
      font-size: 2.25rem; /* Equivalent to text-4xl */
      color: #065f46; /* Equivalent to text-teal-900 */
      font-weight: bold; /* Equivalent to font-bold */
      margin-bottom: 1rem; /* Equivalent to mb-4 */
    }
  </style>  