---
import { Image } from 'astro:assets';
import Main from './MainAlt.astro';
import MainAltNoYScroll from './MainAltNoYScroll.astro';

type Props = {
  name: string;
  description: string;
  photo: string;
  gallery: string[];
};

const { name, description, photo, gallery } = Astro.props;
---
<MainAltNoYScroll class="overflow-hidden">
  <div class="flex flex-col h-3/4 sm:flex-row gap-5 p-4">
    <!-- Artist Details -->
    <div class="w-full sm:w-1/4 flex flex-col gap-5">
      <div class="w-full flex justify-center">
        <Image 
          src={photo} 
          alt={name} 
          class="w-3/4 md:w-full md:h-auto md:object-cover"
        />
      </div>
      <div class="space-y-3">
        <h1 class="text-2xl font-bold">{name}</h1>
        <p class="text-gray-600">{description}</p>
      </div>
    </div>

    <!-- Gallery Grid (2x2) -->
    <div class="w-3/5 grid grid-cols-2 grid-rows-2 gap-4 pb-4">
      {gallery.map((work, index) => (
        <div class="w-full h-full flex items-center justify-center">
          <Image 
            src={work} 
            alt={`Artwork ${index + 1}`}
            class="w-full h-full object-cover"
          />
        </div>
      ))}
    </div>
  </div>
</MainAltNoYScroll>
