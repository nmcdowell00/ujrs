---
const eventName = Astro.url.searchParams.get('event') || 'Unknown Event';
const submitUrl = '/thank-you';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup for {eventName}</title>
  </head>
  <body>
    <h1>Sign Up for {eventName}</h1>
    <form 
      name="event-signup" 
      method="POST" 
      data-netlify="true" 
      data-netlify-recaptcha="true" 
      action={submitUrl}
    >
      <input type="hidden" name="form-name" value="event-signup" />
      <input type="hidden" name="event-name" value={eventName} />

      <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required />
      </div>

      <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required />
      </div>
      
      <div data-netlify-recaptcha="true"></div>
      <button type="submit">Submit</button>
    </form>
  </body>
</html>