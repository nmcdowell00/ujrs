---
import { Image } from 'astro:assets';
import Main from './Main.astro';

type Props = {
  name: string;
  profession: string;
  image: any;
  description: string;
};

const { name, profession, image, description } = Astro.props;
---

<div class="p-2 max-w-[400px] mx-auto font-sans">
    <div class="mb-4">
        <Image 
            src={image}
            height={600}
            width={600/1.5}
            alt=""
            class="w-full h-auto"
        />
    </div>
    <div>
        <span class="flex items-end gap-2.5">
            <h1 class="text-lg font-bold">{name}</h1>
            <p class="text-lg">-</p>
            <p class="text-lg">{profession}</p>
        </span>
        <div class="mt-2">
            <p class="text-[0.95rem] text-neutral-800 leading-6">{description}</p>
        </div>
    </div>
</div>