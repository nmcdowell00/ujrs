---
type Props = {
  name: string;
  date: string;
  time: string;
  description: string;
};

const { name, date, time, description } = Astro.props;
---

<div class="event-card border border-gray-300 bg-white shadow-sm overflow-hidden mx-auto mb-4">
  <div class="event-content p-4">
    <h2 class="event-name text-2xl text-black mb-2">{name}</h2>
    <div class="event-details text-sm text-gray-600 mb-4">
      <p><span class="label font-medium text-gray-800">Date:</span> {date}</p>
      <p><span class="label font-medium text-gray-800">Time:</span> {time}</p>
    </div>
    <p class="event-description text-sm text-gray-700 mb-4">{description}</p>

    <form 
      name="event-signup" 
      method="POST" 
      data-netlify="true" 
      data-netlify-recaptcha="true"
      class="signup-form flex items-center space-x-2 mt-4"
    >
      <input type="hidden" name="form-name" value="event-signup" />
      <input type="hidden" name="event-name" value={name} />

      <input 
        type="text" 
        id={`name-${name}`} 
        name="name" 
        placeholder="Name" 
        required 
        class="flex-1 p-2 border border-gray-300 rounded"
      />

      <input 
        type="email" 
        id={`email-${name}`} 
        name="email" 
        placeholder="Email" 
        required 
        class="flex-1 p-2 border border-gray-300 rounded"
      />
        <div netlify-recaptcha="true"></div>      
      <button 
        type="submit" 
        class="bg-teal-700 text-white px-4 py-2 rounded hover:bg-teal-600 transition duration-200"
      >
        Sign Up
      </button>
    </form>
    
    
  </div>
</div>